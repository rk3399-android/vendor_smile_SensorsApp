<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <ImageView
            android:id="@+id/p_on"
            android:src="@drawable/p_on"
            android:alpha="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/Gear"/>
    <View
            style="@style/SpacerView"/>
    <ImageView
            android:id="@+id/r_off"
            android:src="@drawable/r_off"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/Gear"/>
    <View
            style="@style/SpacerView"/>
    <ImageView
            android:id="@+id/n_off"
            android:src="@drawable/n_off"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/Gear"/>
    <View
            style="@style/SpacerView"/>
    <ImageView
            android:id="@+id/d_off"
            android:src="@drawable/d_off"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/Gear"/>			
                 
</merge>
